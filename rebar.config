{project_plugins, [erlfmt]}.

{erlfmt, [
    write,
    verbose,
    {files, [
        "*.erl",
        "rebar.config"
    ]}
]}.

{pre_hooks, [
    {eunit, "make clean"},
    {eunit, "make compile"}
]}.

{eunit_opts, [
    verbose,
    {print_depth, 64}
]}.

{eunit_tests, [
    {module, lesson3_task1},
    {module, lesson3_task2},
    {module, lesson3_task3},
    {module, lesson3_task4}
]}.
